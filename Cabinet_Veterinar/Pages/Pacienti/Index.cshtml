@page
@model Cabinet_Veterinar.Pages.Pacienti.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Pacienți</h1>

<form method="get">
    <p>
        <input type="text" name="SearchString" value="@Model.SearchString" placeholder="Căutați după nume..." />
        <button type="submit">Caută</button>
    </p>
</form>

<p>
    <a asp-page="Create">Adaugă pacient</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pacient[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pacient[0].Specie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pacient[0].Varsta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pacient[0].Proprietar.Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pacient[0].Consultatie.Diagnostic)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Pacient) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Varsta)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Proprietar.Nume)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Consultatie.Diagnostic)
                </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
