            <div class="form-group">
                <label asp-for="Pacient.Varsta" class="control-label"></label>
                <input asp-for="Pacient.Varsta" class="form-control" />
                <span asp-validation-for="Pacient.Varsta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pacient.ProprietarID" class="control-label">Proprietar</label>
                <select asp-for="Pacient.ProprietarID" class="form-control" asp-items="ViewBag.ProprietarID">
